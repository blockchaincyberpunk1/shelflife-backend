# Node Environment
NODE_ENV=development

# Database Connection String (required)
# Replace `your_mongodb_username`, `your_mongodb_password`, `your_mongodb_host`, `your_mongodb_port`, and `your_database_name` with actual values
MONGO_URI=mongodb://your_mongodb_username:your_mongodb_password@your_mongodb_host:your_mongodb_port/your_database_name

# JWT Secret (required for authentication)
# Replace `your_strong_random_secret` with a strong secret (random alphanumeric string)
JWT_SECRET=your_strong_random_secret

# Port (optional)
# The default port is 5000, but here you are specifying port 5001
PORT=5001 

# Email Configuration (required for password reset emails)
# Replace the placeholders with your actual SMTP settings
SMTP_HOST=your_smtp_host  
SMTP_PORT=your_smtp_port 
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password 
SMTP_FROM_EMAIL=your_sender_email_address 

# Frontend URL (required for password reset email links)
# Set this to the URL where your frontend (client) is hosted, either locally or in production
CLIENT_URL=http://localhost:3000  # Replace with production URL if needed

# Support URL (optional)
# You can use this URL in your emails to direct users to a support page, if available
SUPPORT_URL=https://your-website.com/support  # Optional support link for password reset emails
